@using MotionViewer.Models
@using System.IO;
@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
            <video  id="player" controls="true" type='video/mp4' muted playsinline class="video-background"></video>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div>
@foreach (var item in Model.directorys)
{
    <a href="/Home/dir/@item.Replace("/","$")"> @System.IO.Path.GetFileName(item)</a><br>
}

<div class="row">
@foreach (var item in Model.files)
{


<div class="col">    
    @System.IO.Path.GetFileName(item)
    <br>

    <img src="/Home/preview/@item.Replace("/","$")" class="img-fluid">
    <br>
   

  
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" onclick=' var video = document.getElementById("player");video.src = "/Home/file/@item.Replace("/","$")";video.load();video.play();'>
  View
</button>
<br>
</div>



   
}
</div>
</div>